# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Discord OAuth
NEXT_PUBLIC_DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# Discord Bot (required for channel-based application submissions)
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_discord_server_id

# Application Webhook URLs (one per department)
# You can use either webhooks OR the bot token + channel IDs
LSPD_WEBHOOK_URL=https://discord.com/api/webhooks/your_lspd_webhook
LSCSO_WEBHOOK_URL=https://discord.com/api/webhooks/your_lscso_webhook
EMS_WEBHOOK_URL=https://discord.com/api/webhooks/your_ems_webhook
FIRE_WEBHOOK_URL=https://discord.com/api/webhooks/your_fire_webhook
DOJ_WEBHOOK_URL=https://discord.com/api/webhooks/your_doj_webhook

# Database Configuration (if applicable)
DATABASE_URL=your_mysql_connection_string
